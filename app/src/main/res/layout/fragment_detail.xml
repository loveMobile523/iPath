<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/liLayDirections"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_trip_planner"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Directions"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <TextView
                        android:id="@+id/tvConnection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/detail_item_right_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:lineSpacingMultiplier="0.9"
                        android:layout_alignParentRight="true"
                        android:text="@string/detail_item_no_internet_connection"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="#00ADED"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayShowOnTheMap"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_new_places"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Show on the Map"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <ImageView
                        android:layout_width="@dimen/detail_item_arrow_right_size"
                        android:layout_height="@dimen/detail_item_arrow_right_size"
                        android:padding="@dimen/detail_item_arrow_right_padding"
                        android:layout_marginRight="@dimen/detail_item_right_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayAddReview"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_add_review"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Add Review"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <ImageView
                        android:layout_width="@dimen/detail_item_arrow_right_size"
                        android:layout_height="@dimen/detail_item_arrow_right_size"
                        android:padding="@dimen/detail_item_arrow_right_padding"
                        android:layout_marginRight="@dimen/detail_item_right_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayPhone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Phone"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/detail_item_right_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:text="1(254)883-5556"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="#00ADED"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayAddToFavorites"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_places"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Add to Favorites"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayIncorrectInfo"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_error"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="Incorrect info?"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <ImageView
                        android:layout_width="@dimen/detail_item_arrow_right_size"
                        android:layout_height="@dimen/detail_item_arrow_right_size"
                        android:padding="@dimen/detail_item_arrow_right_padding"
                        android:layout_marginRight="@dimen/detail_item_right_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginLeft="@dimen/detail_item_break_left_margin"
                android:text="Amenities"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayPlaceName"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgPlace"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pin_cc120"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="7">

                    <TextView
                        android:id="@+id/tvPlaceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Rest Place #250"
                        android:textSize="@dimen/detail_item_text_size"
                        android:textColor="@color/myNavigationColor"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_below="@+id/tvPlaceName"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.01"
                        android:rating="2.15"
                        android:theme="@style/RatingBar"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="@dimen/detail_item_break_left_margin"
                android:text="Location"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height"
                android:layout_weight="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="@dimen/detail_item_break_left_margin"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Address"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/detail_item_right_margin"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Texas Hwy 6  7 East, Marlin, TX"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height"
                android:layout_weight="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="@dimen/detail_item_break_left_margin"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Latitude"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>

                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/detail_item_right_margin"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="31.3056"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/detail_item_break_right_margin"
                android:layout_marginRight="@dimen/detail_item_break_left_margin"
                android:background="@color/myNavigationGrayColor">
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_item_height"
                android:layout_weight="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="@dimen/detail_item_break_left_margin"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Longitude"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>

                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/detail_item_right_margin"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="-96.8755"
                    android:textSize="@dimen/detail_item_text_size"
                    android:textColor="@color/myNavigationColor"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>